<%= render partial: "shared/hero", locals: { title: 'Account' } %>
<div class="container">
  <div class="row">
    <%= form_tag(user_account_path(current_user.id), method: :patch, :class => "form-inline") do %>
      <%= label_tag('balance', 'Account Balance', :class => "mr-sm-2", :style => "font-size: 1rem; line-height: 1.5;") %>
      <%= number_field_tag(:balance, @account.balance, :class => "form-control mr-sm-2") %>
      <%= submit_tag("Update", :class => "btn btn-success my-2 my-sm-0") %>
    <% end %>
  </div>
</div>
