
<%=
  render partial: "shared/hero",
  locals: {
    title:'Images',
    search_method_path: products_path,
    search_placeholder: "Search Images..."
  }
%>

<div class="container pb-5">
  <div class="row mb-5">
    <% if !@products.count.zero? %>
      <%= render partial: "shared/product", collection: @products  %>
    <% else %>
      <p>No images found!</p>
    <% end %>
  </div>
</div>
