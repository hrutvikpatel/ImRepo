<%= render partial: "shared/hero", locals: { title: "Admin", subtitle: "New Product" } %>
<div class="container">
  <%= simple_form_for [:admin, @product], class: "form-horizontal" do |f| %>
    <%= f.input :image, as: :file, :multiple => false, label: "Upload Image", :required => true %>
    <%= f.input :title, :required => true%>
    <%= f.input :description, :required => true%>
    <%= f.input :price, :required => true %>
    <%= f.association :categories, collection: Category.all, as: :check_boxes, include_hidden: false, :required => true %>
    <%= f.button :submit %>
  <% end %>

  <%= link_to "Back to Product List", admin_products_path %>
</div>