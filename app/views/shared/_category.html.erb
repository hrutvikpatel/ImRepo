<div class="col d-flex justify-content-center">
  <div class="card" style="width: 18rem;">
    <% if category.products.first %>
      <%= image_tag(category.products.first.attachment, :class => "card-img-top") %>
    <% else %>
      <img src="https://bulma.io/images/placeholders/1280x960.png" class="card-img-top" alt="...">
    <% end %>
    <div class="card-body">
      <h5 class="card-title">
        <%= category.name %>
      </h5>
    </div>
  </div>
</div>