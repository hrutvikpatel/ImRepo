<div class="card">
  <div class="card-image">
    <figure class="image is-4by3">
      <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
    </figure>
  </div>
  <div class="card-content">
    <p class="subtitle">
      <%= image.title %> - <strong>$<%= image.price %></strong>
    </p>
    <p class="description">
      <%= image.description %>
    </p>
  </div>
</div>