<!DOCTYPE html>
<html>
  <head>
    <title>ImRepo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |type, msg| %>
      <div>
        <%= msg %>
      </div>
    <% end %>
    <%= render partial: "shared/navbar" %>

    <div class="container-fluid">
      <div class="row">
        <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
          <div class="position-sticky pt-3">
            <ul class="nav flex-column">
              <li class="nav-item">
                <% images_class = current_page?(images_path) ? "text-primary" : "" %>
                <%= link_to 'Images', images_path, :class => "nav-link h6 #{images_class}" %>
              </li>
              <li class="nav-item">
                <% categories_class = current_page?(categories_path) ? "text-primary" : "" %>
                <%= link_to 'Categories', categories_path, :class => "nav-link h6 #{categories_class}" %>
              </li>
            </ul>

            <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
              <span>Admin Dashboard</span>
              <a class="link-secondary" href="#" aria-label="Add a new report">
                <span data-feather="plus-circle"></span>
              </a>
            </h6>
            <ul class="nav flex-column mb-2">
              <li class="nav-item">
                <% admin_images_class = current_page?(admin_images_path) ? "text-primary" : "" %>
                <%= link_to 'Images', admin_images_path, :class => "nav-link h6 #{admin_images_class}" %>
              </li>
              <li class="nav-item">
                <% admin_categories_class = current_page?(admin_categories_path) ? "text-primary" : "" %>
                <%= link_to 'Categories', admin_categories_path, :class => "nav-link h6 #{admin_categories_class}" %>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">
                  <span data-feather="file-text"></span>
                  Sales
                </a>
              </li>
            </ul>
          </div>
        </nav>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>
